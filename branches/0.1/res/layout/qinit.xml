<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="150px"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/choiceTitle"
        android:layout_width="200px"
        android:layout_height="50px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:text="table choice:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/choicebase"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/choiceInner1"
            android:layout_width="360px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="2px"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="1" />

            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="2" />

            <CheckBox
                android:id="@+id/cb3"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="3" />

            <CheckBox
                android:id="@+id/cb4"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choiceInner2"
            android:layout_width="360px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="2px"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/cb5"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="5" />

            <CheckBox
                android:id="@+id/cb6"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="6" />

            <CheckBox
                android:id="@+id/cb7"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="7" />

            <CheckBox
                android:id="@+id/cb8"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choiceInner3"
            android:layout_width="360px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="2px"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/cb9"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="9" />

            <CheckBox
                android:id="@+id/cb10"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="10" />

            <CheckBox
                android:id="@+id/cb11"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="11" />

            <CheckBox
                android:id="@+id/cb12"
                android:layout_width="90px"
                android:layout_height="wrap_content"
                android:text="12" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <EditText
                android:id="@+id/NameField"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:lines="1"
                android:selectAllOnFocus="true"
                android:text="Name" >

                <requestFocus />
            </EditText>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/level_choice_prompt" />

            <Spinner
                android:id="@+id/levelchoice"
                android:layout_width="250px"
                android:layout_height="40dp"
                android:layout_marginTop="10px"
                android:prompt="@string/level_choice_prompt" />

            <Button
                android:id="@+id/choiceStartButton"
                android:layout_width="250px"
                android:layout_height="40dp"
                android:layout_marginTop="10px"
                android:text="Click" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>