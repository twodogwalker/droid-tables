<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="150px"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/keyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_weight="0.10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/QuestionTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="....."
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ProgressBar
            android:id="@+id/ProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:id="@+id/InputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10px"
            android:layout_weight="5.13"
            android:orientation="horizontal"
            android:padding="10px" >

            <TextView
                android:id="@+id/TextViewS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:text="S1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="70px" />

            <TextView
                android:id="@+id/TextViewX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:text="x"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="70px" />

            <TextView
                android:id="@+id/TextViewS3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="70px" />

            <TextView
                android:id="@+id/TextViewIs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="="
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="70px" />

            <TextView
                android:id="@+id/ResultBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:minWidth="150px"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="70px"
                android:width="150px" >

                <requestFocus />
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/base"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/inner1"
                android:layout_width="360px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="2px"
                android:gravity="center" >

                <Button
                    android:id="@+id/b1"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="1"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/b2"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="2"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="3"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inner2"
                android:layout_width="360px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="2px"
                android:gravity="center" >

                <Button
                    android:id="@+id/b4"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="4"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/b5"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="5"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="6"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inner3"
                android:layout_width="360px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="2px"
                android:gravity="center" >

                <Button
                    android:id="@+id/b7"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="7"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/b8"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="8"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/b9"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="9"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inner4"
                android:layout_width="360px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="2px"
                android:gravity="center" >

                <Button
                    android:id="@+id/bB"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="Â«"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/b0"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="0"
                    android:textSize="50sp"
                    android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/bE"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:text="Enter"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>